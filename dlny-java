// Java Program for finding nth Delannoy Number.
import java.util.*;
import java.lang.*;

public class GfG{
	
	// Return the nth Delannoy Number.
	public static int Delannoy(int n, int m)
	{
		// Base case
		if (m == 0 || n == 0)
			return 1;

		// Recursive step.
		return Delannoy(m - 1, n) +
			Delannoy(m - 1, n - 1) +
			Delannoy(m, n - 1);
	}
	
	// driver function
	public static void main(String args[]){
		int n = 3, m = 4;
		System.out.println(Delannoy(n, m));
	}
}

